<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentTrancy"
    tools:context="com.example.dimpy.myperkeymanager.viewStats">
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccentTrancy"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_Monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/monday" />

        <ImageView
            android:id="@+id/image_Tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/tuesday" />

        <ImageView
            android:id="@+id/image_Wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/wednesday" />

        <ImageView
            android:id="@+id/image_Thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/thursday" />

        <ImageView
            android:id="@+id/image_Friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/friday" />

        <ImageView
            android:id="@+id/image_Saturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/saturday" />

        <ImageView
            android:id="@+id/image_Sunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/sunday" />

    </LinearLayout>
</ScrollView>